{
  "name": "here-maps-react",
  "version": "0.1.3",
  "description": "React components library for HERE Maps",
  "author": "ordazgustavo",
  "license": "MIT",
  "repository": "ordazgustavo/here-maps-react",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepare": "npm run build",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build",
    "format": "prettier --write \"src/**/*.+(js|md|css|json|ts|tsx)\""
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8"
  },
  "peerDependencies": {
    "react": "^16.3.0 || ^16.8.0",
    "react-dom": "^16.3.0 || ^16.8.0"
  },
  "devDependencies": {
    "@types/heremaps": "^3.0.13",
    "@types/jest": "^24.0.15",
    "@types/lodash.debounce": "^4.0.6",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "cross-env": "^5.2.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "jest-environment-jsdom": "^24.8.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "rollup": "^1.2.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-typescript2": "^0.19.2",
    "rollup-plugin-url": "^2.2.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2"
  },
  "jest": {
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/lib/**",
      "!**/__tests__/**"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/?(*.)(spec|test).ts(x|)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json",
        "diagnostics": {
          "pathRegex": "/.(spec|test).ts$/"
        }
      }
    }
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,md,css,json,ts,tsx}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}